
# Records that is helpfull for debugging and udnerstanding the system (and dynamically build GUI if needed)

# All configured axes 

record(waveform,"$(P)AX-Cfgs") {
    field(DESC, "Configured Axes")
    field(FTVL, "SHORT")
    field(NELM, "1000")
    field(INP, ${AXES_IDS})    
}

record(waveform,"$(P)PLC-Cfgs") {
    field(DESC, "Configured PLC:s")    
    field(FTVL, "SHORT")
    field(NELM, "1000")
    field(INP, ${PLC_IDS})
}

record(waveform,"$(P)DS-Cfgs") {
    field(DESC, "Configured Data Storages")
    field(FTVL, "SHORT")
    field(NELM, "1000")
    field(INP, ${DS_IDS})
}

record(waveform,"$(P)Plg-Cfgs") {
    field(DESC, "Configured Plugins")    
    field(FTVL, "SHORT")
    field(NELM, "1000")
    field(INP, ${PLG_IDS})
}

record(waveform,"$(P)EC${M_ID}-Slv-Cfgs") {    
    field(DESC, "Configured EtherCAT slaves (array)")
    field(FTVL, "SHORT")
    field(NELM, "1000")
    field(INP, ${EC_IDS})
}

record(ao,"$(P)EC-Mstr-Cfgs") {
    field(DESC, "EtherCAT master ID")
    field(VAL,  "${M_ID}")
}

record(stringout,"$(P)MCU-Name-Cfgs") {
    field(DESC, "Naming standard script in use.")
    field(VAL,  "${MCU_NAME=""}")
}
