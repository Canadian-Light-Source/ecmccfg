#Asyn parameters for one encoder
record(ai,"${P}${AXIS_NAME}-PosAct0$(ENC_NO)"){
  field(PINI, "1")
  field(DTYP, "asynFloat64")
  field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))T_SMP_MS=$(T_SMP_MS=1000)/TYPE=asynFloat64/ax$(AXIS_NO).actpos$(ENC_NO)?")
  field(PREC, "${PREC=3}")
  field(EGU,  "${EGU=mm}")
  field(SCAN, "I/O Intr")
  field(DESC, "${DESC=""}")
  field(TSE,  "$(TSE=-2)")
}

record(ai,"${P}${AXIS_NAME}-VelAct0$(ENC_NO)"){
  field(PINI, "1")
  field(DTYP, "asynFloat64")
  field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))T_SMP_MS=$(T_SMP_MS=1000)/TYPE=asynFloat64/ax$(AXIS_NO).actvel$(ENC_NO)?")
  field(PREC, "${PREC=3}")
  field(EGU,  "${EGU=mm}/s")
  field(SCAN, "I/O Intr")
  field(DESC, "${DESC=""}")
  field(TSE,  "$(TSE=-2)")
}

# Tha last added encoder is the same as teh number of encoders added
record(longin,"${P}${AXIS_NAME}-EncCnt"){
    field(DESC, "Encoder count")
    field(VAL,  "$(ENC_NO=1)")
    field(PINI, "YES")
}

