
# Records that is helpfull for debugging and udnerstanding the system (and dynamically build GUI if needed)

# All configured plcs 
record(waveform,"$(P)MCU-Cfg-PLC") {
    field(PINI, "1")
    field(DESC, "Configured PLC:s")    
    field(FTVL, "SHORT")
    field(NELM, "1000")
    field(INP, ${PLC_IDS})
}

# All configured data storages
record(waveform,"$(P)MCU-Cfg-DS") {
    field(PINI, "1")
    field(DESC, "Configured Data Storages")
    field(FTVL, "SHORT")
    field(NELM, "1000")
    field(INP, ${DS_IDS})
}

# All configured plugins
record(waveform,"$(P)MCU-Cfg-PLG") {
    field(PINI, "1")
    field(DESC, "Configured Plugins")    
    field(FTVL, "SHORT")
    field(NELM, "1000")
    field(INP, ${PLG_IDS})
}

