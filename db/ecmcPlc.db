record(bo,"$(Name)PLC-$(Index)-enable"){
  field(DESC, "${DESC=Enable/disable PLC ${Index}}")
  field(OUT,  "$(Name)PLC-$(Index)-enable_ PP")
  field(ZNAM, "enable")
  field(ONAM, "disable")
}

record(ao,"$(Name)PLC-$(Index)-enable_"){
  field(PINI, "$(PINI=YES)")
  field(DESC, "$(DESC=PLC$(Index) scantime)")
  field(DTYP, "$(DTYP=asynFloat64)")
  field(OUT,  "@asyn($(PORT),$(ADDR=0),$(TIMEOUT=1))T_SMP_MS=$(T_SMP_MS=1000)/TYPE=asynFloat64/plcs.plc${Index}.enable=")
  field(SCAN, "Passive")
  field(FLNK, "$(FLNK=)")
}

record(ai,"$(Name)PLC-$(Index)-scantime"){
  field(PINI, "$(PINI=YES)")
  field(DESC, "$(DESC=PLC$(Index) scantime)")
  field(DTYP, "$(DTYP=asynFloat64)")
  field(INP,  "@asyn($(PORT),$(ADDR=0),$(TIMEOUT=1))T_SMP_MS=$(T_SMP_MS=1000)/TYPE=asynFloat64/plcs.plc${Index}.scantime?")
  field(SCAN, "Passive")
  field(EGU,  "s")
  field(FLNK, "$(FLNK=)")
}

record(ai,"$(Name)PLC-$(Index)-error"){
