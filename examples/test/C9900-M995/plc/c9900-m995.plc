  ec0.s${SLAVE_ID}.binaryOutput01_R:=1;
  # 2. Green
  ec0.s${SLAVE_ID}.binaryOutput02_G:=1;
  # 3. Blue
  ec0.s${SLAVE_ID}.binaryOutput03_B:=1;
